<section>
<h1>CONSUMING HUBSTAFF API CLIENT IN RAILS 5</h1>
<% if signed_in? %>
  <p><%= current_user.email %> | <%= link_to "Sign Out", sign_out_path, method: :delete %></p>
<% else %>
  <%= link_to "Sign In", sign_in_path %>
<% end %>


<% if signed_in? && current_user.hubstaff_auth_token.present? %>
